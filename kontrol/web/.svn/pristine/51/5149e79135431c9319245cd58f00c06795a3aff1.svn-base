                                                inline: false,
                                                letterCase: 'uppercase',
                                                position: 'bottom left',
                                                change: function(hex, opacity) {
                                                    if (!hex)
                                                        return;
                                                    if (opacity)
                                                        hex += ', ' + opacity;
                                                    try {
                                                        if ($(this).attr('data-target') === "font")
                                                            $(".items-price").css("color", hex);
                                                        else
                                                            $(".items-price").css("background", hex);
                                                    } catch (e) {
                                                    }
                                                },
                                                theme: 'bootstrap'
                                            });

                                        });


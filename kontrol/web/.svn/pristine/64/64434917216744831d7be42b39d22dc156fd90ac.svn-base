function togglePending(e) {
    $('#pending-orders').parent().toggle();

    if ($("#eye").hasClass("fa-eye-slash")) {
        $("#eye").removeClass("fa-eye-slash");
        $("#eye").addClass("fa-eye");
    } else {
        $("#eye").addClass("fa-eye-slash");
        $("#eye").removeClass("fa-eye");
    }
}


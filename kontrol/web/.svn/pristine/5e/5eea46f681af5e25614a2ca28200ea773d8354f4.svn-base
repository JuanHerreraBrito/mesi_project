}

.dataTables_wrapper{
    border: 1px solid #ccc;
    padding: 15px;
    max-width: 830px;
    border-radius: 5px;
    background: #FFFFFF;
    box-shadow: 2px 2px 6px #DDD;
    margin-bottom:10px;
}
div .no{

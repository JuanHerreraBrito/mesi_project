.resumen{
    margin:15px 0;
}

.res-item {
    display: inline-block;
    border: 1px solid #e2e2e2;
    text-align: center;
    width: 30%;
    padding: 15px 0;
    margin: 0 10px;
    border-radius: 5px;
    box-shadow: 2px 2px 6px #ccc;
    background: #ffffff;
}

.res-item span{
    color:#bdbdbd;
}

.res-item h1{
    padding:0;
    margin:0
}
#accordion-pagos{
    margin:15px 0;
}
#accordion-pagos a,#accordion-pagos a:hover{
    color:#333;
    text-decoration:none;
}

#accordion-pagos .panel-title b{
    display: inline-block;
    width:160px;
}

#accordion-pagos .panel-title i{
    font-weight: normal;
    font-style: normal;
}

#accordion-pagos .panel-title span{
    float:right;
    color: #999;
}

#accordion-pagos .panel-title .articulo{
    display: inline-block;
    width:40%;
    font-weight: 200;
}

.from,.to{
    margin:5px 0;
}
.table-items th{
    text-transform: capitalize;
}
.table-items img{
    height:50px;
}
td.col-discount{
    color:#900;
}
td.col-discount:before{
    content:"-";
}
.name{
    text-transform: capitalize;
}

@media 
only screen and (max-width: 760px),
(min-device-width: 768px) and (max-device-width: 1024px)  {

    /* Force table to not be like tables anymore */
    table.table-responsive, table.table-responsive thead, table.table-responsive tbody, table.table-responsive th, table.table-responsive td, table.table-responsive tr { 
        display: block !important; 
        border:none;
        text-align: left !important;
        color: #666666 !important;
        width:auto;
    }

    table.table-responsive thead tr { 
        position: absolute;
        top: -9999px;
        left: -9999px;
    }

    table.table-responsive td { 
        border: none;
        border-bottom: 1px solid #eee; 
        position: relative;
        padding: 8px 8px 8px 50% !important; 
    }

    table.table-responsive table tr{
        margin-bottom: 5px;
        border-top: 1px solid #ccc !important;
    }

    .table-bordered td{
        border: none !important;
    }

    table.table-responsive td:before { 
        position: absolute;
        top: 6px;
        left: 6px;
        width: 45%; 
        padding-right: 10px; 
        white-space: nowrap;
    }    

}
    margin-bottom: 15px;
}

.bubble {
    clear: both;
    position: relative;
    width: 230px;
    min-height: 60px;
    padding: 10px 15px 15px 15px ;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    transition: all 0.3s ease;
    margin-bottom: 20px;
    box-shadow: 1px 1px 2px #ccc;
    transform: scale(0);
    -ms-transform: scale(0); /* IE 9 */
    -webkit-transform: scale(0); /* Safari and Chrome */
}

.bubble .author{
    display: block;
    font-size: 10px;
    float: right;
    position: absolute;
    right: 5px;
    bottom: 5px;
    color: #999;
}

.bubble.me:after 
{
    content: '';
    position: absolute;
    border-style: solid;
    border-width: 13px 20px 13px 0;
    border-color: transparent #FFE7E1;
    display: block;
    width: 0;
    z-index: 1;
    left: -20px;
    top: 17px;
}

.bubble.me{
    text-align: left;
    background: #FFE7E1;
    float:left;
    transform: scale(1);
    -ms-transform: scale(1); /* IE 9 */
    -webkit-transform: scale(1); /* Safari and Chrome */
}


.bubble.you
{
    text-align: right;
    background: #e2e2e2;
    float:right;
    transform: scale(1);
    -ms-transform: scale(1); /* IE 9 */
    -webkit-transform: scale(1); /* Safari and Chrome */
}

.bubble.you:after 
{
    content: '';
    position: absolute;
    border-style: solid;
    border-width: 13px 0 13px 20px;
    border-color: transparent #e2e2e2;
    display: block;
    width: 0;
    z-index: 1;
    right: -20px;
    top: 17px;
}



@media 
only screen and (max-width: 760px),
(min-device-width: 768px) and (max-device-width: 1024px)  {

    /* Force table to not be like tables anymore */
    table.table-responsive, table.table-responsive thead, table.table-responsive tbody, table.table-responsive th, table.table-responsive td, table.table-responsive tr { 
        display: block !important; 
        border:none;
        text-align: left !important;
        color: #666666 !important;
        width:auto;
    }

    table.table-responsive thead tr { 
        position: absolute;
        top: -9999px;
        left: -9999px;
    }

    table.table-responsive td { 
        border: none;
        border-bottom: 1px solid #eee; 
        position: relative;
        padding: 8px 8px 8px 50% !important; 
    }

    table.table-responsive table tr{
        margin-bottom: 5px;
        border-top: 1px solid #ccc !important;
    }

    .table-bordered td{
        border: none !important;
    }

    table.table-responsive td:before { 
        position: absolute;
        top: 6px;
        left: 6px;
        width: 45%; 
        padding-right: 10px; 
        white-space: nowrap;
    }    

}
#sortable_items{
    padding:0;
    margin:0;
    list-style: none;
}
.items{
    display:inline-block;
    padding-bottom: 30px;
    width:100%;
}

.items h4{
    margin:20px 0;
}

#imageCover {
    height: 250px;
    overflow: hidden;
    margin: 0 -20px 0;
    border-bottom: 1px solid #DDDDDD;
}

#logoCover{
    margin-top: -100px;
background: white;
display: inline-block;
padding: 3px;
position: absolute;
border-radius: 4px;
cursor: pointer;
}

 #design .btn.btn-success{
         background: rgba(2,2,2,0.7);
    color: #f2f2f2;
    border: 1px solid #333;
        border-radius: 5px;
    padding: 7px 10px;
    }
    #design .btn-group{
        position: absolute;
        right: 10px;
    }
    #design #edit-foto{
        bottom: 10px;
                visibility: hidden;

    }
    #design #edit-cover{
        top: 205px;
         visibility: hidden;

    }
    #logoCover:hover #edit-foto, #imageCover:hover #edit-cover{
        visibility: visible;
    }
    

#item-example{
    margin: 40px 0px;
    text-align: center;
    border: 3px dashed #e2e2e2;
border-radius: 10px;

}

.floatcategories h4{
    margin-left:10px;
}
.floatcategories{
    display: none;
    float: right;
    position: absolute;
    background: white;
    z-index: 101;
    padding: 0 10px 10px;
    border: 1px solid #CCC;
    box-shadow: 0px 4px 4px #DDD;
    width: 300px;
    color: #666;
    top:60px;
    right:30px;
    border-radius: 5px;
}
ol li:last-child .btn-group > a:first-child{
    color: #b2b2b2;
}

.piquito{
    background: url(/img/triangulito_globo.png) no-repeat top right;
    width: 22px;
    height: 8px;
    border: none;
    margin-top: -6px;
    float: right;
}

.itemBox {
    float: left;
    margin: 10px 15px 10px 0;
    width: 160px;
    height: 220px;
    overflow: visible;
    background: #FFFFFF;
    box-shadow: 1px 2px 3px #ddd;
    border: 1px solid #ccc;
    list-style: none;
}

#item-colours{
   padding: 20px 0 20px 20px;
}

#item-example .letrero {
display: inline-block;
margin-top: 70px;
width: 140px;
text-align: center;
font-size: 21px;
font-weight: lighter;
padding-left: 15px;
border-left: 3px solid;
}

#item-example .box{
display: inline-block;
padding: 40px 0px;
height: 315px;
text-align: center;
}

.itemBox:hover{
    border: 1px solid lightblue;
}

.itemBox input[type=checkbox]{
    position: absolute;
    margin-top:7px;
    margin-left:7px;
}

div.itemList img{
    display:none;
}

button.guardar{
    margin:10px 0;
    display:none;
}

a.fotoTienda {
    border: 1px solid #ddd;
    margin: 10px;
    display:inline-block;
}

div.itemList {
    border:none;
    background: none;
    margin-top:10px;
    float: left;
    display: inline-block;  
    width: auto;
    padding:0;
}


.itemList input[type=checkbox]{
    margin: 5px 10px 0 5px;
    float: left;
}

.itemList .img, .itemBox .img{
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center;    
}

.itemBox .img{
    height: 158px;
    width: 158px;
    border-bottom: 1px solid #e2e2e2;
}

#main_container{
    max-width: 1110px;
}
/*
li.itemBox .live, li.itemBox .price{
    display:none !important;
}*/

li.itemList .live{
    color:#999;
    float:right;
    display:none;
}

li.itemList .items-price{
    font-size: 12px;
    color:#999;
    float:right;
    padding:5px;
    background:transparent;
}


li.itemList.changed .items-price{
    font-style: italic;
    color: #900;
}

li .items-price:before{
    content:"$";
}

li.itemBox .items-price{
display:block !important;
}

li.itemBox .live {
    display:none !important;
}

li.itemBox a, li.itemList a{
    color:#666;
    font-size: 13px;
}

li.itemList a:hover{
    color:#3dc5f5;
}

li.itemList a{
    display: inline-block;
    width:60%;
}

li.itemBox a:hover{
    text-decoration: none;
}

.itemBox p{
    padding: 5px;
    text-align: center;
}

itemBox a{
    cursor: pointer;
    font-weight:bold;
}

.itemList {
    display: block;
    float: none;
    min-height: 40px !important;
    border: 1px solid #e2e2e2;
    padding: 5px;
    margin: -1px 0 0 0;
    overflow: hidden;
    border-collapse: collapse;
    height: 42px;
    background: #FFFFFF;
    width: 100%;
}

.itemList:hover{
    background: #ececec;
}

.itemBox button{
    width:100%;
    border-radius: 0;
}

.itemList .img{
    height: 30px;
    width: 30px;
    display: inline-block;
    margin-right: 5px;
    float:left;
}

.header-options{
    display:none;
    margin-bottom: 10px;
    border-bottom: 1px solid #e2e2e2;
}

.itemList p{
    display:inline-block;
    margin-top: 5px;
}

.options-itemlist{
    margin:25px 15px 5px 0;
    height:40px;
}

div.search{
    max-width:280px;
    padding: 0px; 
    position: absolute; 
    top: 0px;
    width: 0; 
    overflow: hidden; 
    background: #2d2f3d;
}

div.search input[type=text]{
    margin: 10px;
    background-color: #44495c;
    color: #ccc;
    border: none;
    height: 30px;
    border-radius:5px;
    padding-right: 24px;
}

div.search span{
    top: 18px;
    color: #9a79a8;
    z-index: 10000;
    position: absolute;
    right: 15px;
}

#preloader {
    display:none;
    background: rgba(255,255,255,0.92);
    position:fixed;
    left:0px; 
    top:0px; 
    width:100%; 
    height:100%; 
    text-align:center;
    color:#333;
    z-index: 5000;
    padding-top:150px;
}
#preloader div.bar {
    width:400px;
    margin:20px auto;
}

#preloader ul {
    list-style: none;
    width:400px;
    margin: 20px auto;
    text-align: left;
    padding:0;
}

#preloader ul li{
    border: 1px solid #ccc;
    padding: 7px 20px;
    border-radius: 10px;
    margin-top: 15px;
    color: #999;
    text-align: center;
    font-weight: lighter;
    font-size: 16px;
}

#preloader ul span{
    width:25px;
    color:#9a79a8;
}

#preloader_image {
    position: relative;
    left:0px;
    top:-10px;
}

#incomplete-profile{
    min-width: 300px;
}

#incomplete-profile a:first-child{
    height: 50px;
    overflow: hidden;
    padding: 4px 10px;
    color:#e2e2e2;
}

#incomplete-profile span.tip{
    margin: 1px 0 0 0;
    font-weight: lighter;
    font-size: 12px;
    display: inline-block;
    vertical-align: top;
}

#incomplete-profile .progress{
    height: 15px;
    background: #ccc;
    margin: 3px 0 0 0;
}

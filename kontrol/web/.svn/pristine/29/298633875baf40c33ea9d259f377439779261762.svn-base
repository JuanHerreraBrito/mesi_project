									shipment_mark.hide();
									if ($('#loading_'+id).length > 0){
									  $('#loading_'+id).show();
									}else{
										shipment_mark.before('<img src="/img/creating_store.gif" width="20" height="20" id="loading_'+id+'" />');
									}
									var input_field = shipment_mark;

									$.ajax({
										 type: 'post',
										 url: '/items/actualizar_status_location',

}

.table.transparent{
    margin:10px;
    max-width:800px;
}

.col-id:before{
    content:"No. ";
}
.col-units_total:after{
    content:" art√≠culos";
}
.col-total_sale_price{
    text-align: right;
}
.col-currency{
    color:#BBB;
    text-transform: uppercase;
}

.table.transparent th{
    display: none;
}

.table.transparent td{
    min-width:14%;
    width: 114px;
}

.table.transparent,.table.transparent tr,.table.transparent td, .table.transparent th{
    border:none;
    background: none;
}

